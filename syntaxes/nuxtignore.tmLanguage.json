{
    "scopeName": "source.nuxtignore",
    "patterns": [
        {
            "begin": "^\\s*#",
            "end": "$",
            "name": "comment.line.nuxtignore"
        },
        {
            "begin": "^\\s*!",
            "end": "$",
            "name": "comment.line.nuxtignore"
        },
        {
            "match": "^[^#!\\s].*$",
            "name": "string.path.nuxtignore"
        }
    ],
    "fileTypes": [
        "nuxtignore"
    ]
}